{
  "compilerOptions": {
    "esModuleInterop": true,
    "moduleResolution": "node",
    "target": "es6",
    "module": "commonjs",
    "strict": true,
    "outDir": "dist",
    "sourceMap": false,
    "baseUrl": "./src",
    "paths": {
      "@/*": ["*"]
    },
    "resolveJsonModule": true
  },
  "include": ["./src/**/*", "types.d.ts"],
  "exclude": ["node_modules", "./src/**/__tests__/**/*", "./src/**/__mocks__/**/*"]
}
